<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8" />
  <title>Register</title>
  <meta name="viewport" content="width=device-width, initial-scale=1" />
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" />
  <style>
    /* Include all your nav styles here */
    * {
      margin: 0;
      padding: 0;
      box-sizing: border-box;
      font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
    }

    body {
      background-color: #f1fdf3;
    }

    nav {
      background-color: #333;
      padding: 15px 20px;
      display: flex;
      justify-content: space-between;
      align-items: center;
      flex-wrap: wrap;
      width: 100%;
    }

    .logo img {
      height: 40px;
    }

    .skill-selector {
      display: flex;
      align-items: center;
      gap: 10px;
      color: white;
      background-color: #444;
      padding: 8px 12px;
      border-radius: 8px;
      box-shadow: 0 0 8px rgba(0, 0, 0, 0.2);
    }

    .skill-selector label {
      color: #fff;
      font-weight: 600;
    }

    .skill-selector select {
      padding: 8px 14px;
      border: none;
      border-radius: 6px;
      font-size: 15px;
      background-color: #fff;
      color: #333;
      font-weight: 500;
      cursor: pointer;
      box-shadow: 0 2px 6px rgba(0, 0, 0, 0.15);
      transition: all 0.3s ease;
    }

    .skill-selector select:hover {
      background-color: #f1f1f1;
    }

    .nav-group {
      display: flex;
      align-items: center;
      gap: 15px;
    }

    .nav-links {
      display: flex;
      gap: 20px;
      align-items: center;
    }

    .nav-links a {
      color: white;
      text-decoration: none;
      font-weight: bold;
      transition: color 0.3s;
    }

    .nav-links a:hover {
      color: #ffcc00;
    }

    .login-btn {
      padding: 8px 24px;
      font-size: 16px;
      border: none;
      border-radius: 6px;
      cursor: pointer;
      background-color: rgba(255, 255, 255, 0.8);
      transition: background-color 0.3s;
    }

    .login-btn:hover {
      background-color: rgba(255, 204, 0, 0.9);
    }

    .hamburger {
      display: none;
      flex-direction: column;
      cursor: pointer;
    }

    .hamburger span {
      height: 3px;
      width: 25px;
      background: white;
      margin-bottom: 4px;
      border-radius: 3px;
    }

    .profile-icon {
      width: 32px;
      height: 32px;
      border-radius: 50%;
      overflow: hidden;
      cursor: pointer;
    }

    .profile-icon img {
      width: 100%;
      height: 100%;
      object-fit: cover;
    }

    @media (max-width: 768px) {
      .hamburger {
        display: flex;
      }

      .nav-links {
        width: 100%;
        flex-direction: column;
        align-items: flex-start;
        display: none;
        margin-top: 15px;
      }

      .nav-links.active {
        display: flex;
      }

      .skill-selector {
        order: 3;
        width: 100%;
        margin: 10px 0;
        justify-content: center;
      }

      .skill-selector select {
        width: 100%;
      }
    }

    .card {
      max-width: 500px;
      margin: auto;
      border: 1px solid #cdeacc;
      background-color: #ffffff;
    }

    .form-label {
      color: #2e7d32;
    }

    .form-control:focus {
      border-color: #66bb6a;
      box-shadow: 0 0 0 0.2rem rgba(102, 187, 106, 0.25);
    }

    .btn-green {
      background-color: #4caf50;
      border-color: #4caf50;
      color: white;
    }

    .btn-green:hover {
      background-color: #43a047;
      border-color: #43a047;
    }

    .toggle-btn {
      cursor: pointer;
      color: #4caf50;
      font-size: 0.9rem;
      user-select: none;
    }
  </style>
</head>
<body>

  <!-- Header / Nav -->
  <nav>
    <div class="logo">
      <a href="/home"><img src="../logo.png" alt="Logo" /></a>
    </div>

    

    <div class="hamburger" onclick="document.getElementById('navLinks').classList.toggle('active')">
      <span></span>
      <span></span>
      <span></span>
    </div>

    <div class="nav-group">
      <div class="nav-links" id="navLinks">
        <a href="/home">Home</a>
        
        <button class="login-btn" onclick="window.location.href='/login'">Login</button>
  
      </div>
     
    </div>
  </nav>

  <!-- Registration Form -->
  <div class="container py-5">
    <div class="card shadow-sm p-4 rounded-4 mx-auto">
      <h3 class="mb-4 text-success text-center">Sign Up</h3>
      <form action="/register" method="POST">
        <% if (errorMessages && errorMessages.length > 0) { %>
          <div class="alert alert-warning alert-dismissible fade show" role="alert">
            <ul class="mb-0">
              <% errorMessages.forEach(error => { %>
                <li class="text-dark"><%= error %></li>
              <% }) %>
            </ul>
            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
          </div>
        <% } %>

        <!-- form fields (same as before)... -->
        <div class="row mb-3">
          <div class="col-12 col-md-6 mb-3 mb-md-0">
            <label for="firstName" class="form-label">First Name</label>
            <input type="text" class="form-control" name="firstName" id="firstname" value="<%= oldinput.firstName %>" required>
          </div>
          <div class="col-12 col-md-6">
            <label for="lastName" class="form-label">Last Name</label>
            <input type="text" class="form-control" name="lastName" id="lastName" value="<%= oldinput.lastName %>" required>
          </div>
        </div>

        <div class="mb-3">
          <label for="username" class="form-label">Username</label>
          <input type="text" class="form-control" name="username" id="username" value="<%= oldinput.username %>" required>
        </div>

        <div class="mb-3">
          <label for="email" class="form-label">Email</label>
          <input type="email" class="form-control" name="email" id="email" value="<%= oldinput.email %>" required>
        </div>

        <div class="mb-3">
          <label for="password" class="form-label">Password</label>
          <div class="input-group">
            <input type="password" class="form-control" name="password" id="password" value="<%= oldinput.password %>" required>
            <span class="input-group-text toggle-btn" onclick="togglePassword('password', this)">Show</span>
          </div>
        </div>

        <div class="mb-3">
          <label for="confirmPassword" class="form-label">Confirm Password</label>
          <div class="input-group">
            <input type="password" class="form-control" name="confirmPassword" id="confirmPassword" value="<%= oldinput.password %>" required>
            <span class="input-group-text toggle-btn" onclick="togglePassword('confirmPassword', this)">Show</span>
          </div>
        </div>

        <div class="mb-3">
          <label for="teachSkill" class="form-label">TeachSkill</label>
          <input type="text" class="form-control" name="teachSkill" id="teachSkill" value="<%= oldinput.teachSkill %>" required>
        </div>

        <div class="mb-3">
          <label for="teachskill_category" class="form-label">TeachSkill Category</label>
          <input type="text" class="form-control" name="teachSkillcategory" id="teachSkillcategory" value="<%= oldinput.teachSkillcategory %>" required>
        </div>

        <div class="mb-3">
          <label for="teachskill_subcategory" class="form-label">TeachSkill  Sub_Category</label>
          <input type="text" class="form-control" name="teachSkillsubcategory" id="teachSkillsubcategory" value="<%= oldinput.teachSkillsubcategory %>" required>
        </div>

        <div class="mb-3">
          <label for="learnSkill" class="form-label">LearnSkill</label>
          <input type="text" class="form-control" name="learnSkill" id="learnSkill" value="<%= oldinput.learnSkill %>" required>
        </div>

        <div class="mb-3">
          <label for="learnSkillcategory" class="form-label">LearnSkill Category</label>
          <input type="text" class="form-control" name="learnSkillcategory" id="learnSkillcategory" value="<%= oldinput.learnSkillcategory %>" required>
        </div>

        <div class="mb-3">
          <label for="learnSkillsubcategory" class="form-label">LearnSkill  Sub_Category</label>
          <input type="text" class="form-control" name="learnSkillsubcategory" id="learnSkillsubcategory" value="<%= oldinput.learnSkillsubcategory %>" required>
        </div>

        <button type="submit" class="btn btn-green w-100 mt-3">Sign Up</button>
      </form>
    </div>
  </div>

  <script>
    function togglePassword(fieldId, toggleBtn) {
      const input = document.getElementById(fieldId);
      if (input.type === "password") {
        input.type = "text";
        toggleBtn.textContent = "Hide";
      } else {
        input.type = "password";
        toggleBtn.textContent = "Show";
      }
    }

    function handleSkillSelect() {
      const skill = document.getElementById('skillSelect').value;
      if (skill) {
        window.location.href = `/learn/${skill}`;
      }
    }
  </script>

  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
